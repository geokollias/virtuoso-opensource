# SBP 256 scale benchmark
# make SSD volumes /1s1 and /1s2
sudo ./mkvol.sh 
# download the spb 256 db backup from the s3 bucket
cd /1s1/
aws s3 cp s3://opl-spb256dataset/spb256db.tar .
# decompress the spb 256 db backup
cd /
tar xf /1s1/spb256db.tar 
gunzip /1s1/dbs/spb256.db.gz &
gunzip /1s2/dbs/spb256.db.gz &
wait
# cleanup
rm /1s1/spb256db.tar 
# copy the benchmark on SSD 
cd /home/spb256/
cp -R /home/ec2-user/ldbc_spb_bm_2.0/dist /1s2/spb256
# copy the config files for banchmark
cp *.properties /1s2/spb256
# download the datasets and query parameters
cd /1s2/spb256/
aws s3 cp s3://opl-spb256dataset/spb256data.tar .
# decompress the dataset and query parameters
tar xf spb256data.tar 
# start the Virtuoso server
cd /home/spb256
./virtuoso-t +wait
# run the SPB driver
sh run.sh 
# check results from /1s2/spb256/logs 
# stop the server
isql 1111 dba dba exec="raw_exit()"
